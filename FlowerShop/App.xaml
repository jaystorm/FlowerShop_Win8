<Application
    x:Class="FlowerShop.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FlowerShop"
    xmlns:localData="using:FlowerShop.Data">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <!-- 
                    Styles that define common aspects of the platform look and feel
                    Required by Visual Studio project and item templates
                 -->
                <ResourceDictionary Source="Common/StandardStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!-- Application-specific resources -->
            <local:StringFormatConverter x:Key="StringFormatter"></local:StringFormatConverter>
            <x:String x:Key="AppName">FlowerShop</x:String>
        </ResourceDictionary>
    </Application.Resources>
</Application>
